<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChatActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_achievementt"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/back_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:src="@drawable/arrow_vector" />

            <ImageButton
                android:id="@+id/logout_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/exit_vector" />
        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_achievementt"
        android:layout_centerInParent="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/titulo_achievement_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Achievement em Progresso"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/grafic_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_achievement_progress"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/timer_prog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grafic_timer"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:text="Timer" />

        <TextView
            android:id="@+id/time_stamp_prog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timer_prog"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:text="TimeStamp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_stamp_prog"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/criador_da_competicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Criador da Competicao" />

            <TextView
                android:id="@+id/criador_da_competicao_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/criador_da_competicao"
                android:text="Gui" />

            <TextView
                android:id="@+id/criador_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/criador_da_competicao"
                android:layout_marginTop="16dp"
                android:text="Steps" />

            <TextView
                android:id="@+id/criador_steps_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/criador_da_competicao_res"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/criador_steps"
                android:text="XXXXX" />


            <TextView
                android:id="@+id/criador_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/criador_steps"
                android:layout_marginTop="16dp"
                android:text="Points" />

            <TextView
                android:id="@+id/criador_point_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/criador_steps_res"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/criador_point"
                android:text="XXXXX" />


            <TextView
                android:id="@+id/family_da_competicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/criador_point"
                android:layout_marginTop="20dp"
                android:text="Family" />

            <TextView
                android:id="@+id/family_da_competicao_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/criador_point_res"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/family_da_competicao"
                android:text="Tiago" />

            <TextView
                android:id="@+id/family_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/family_da_competicao"
                android:layout_marginTop="16dp"
                android:text="Steps" />

            <TextView
                android:id="@+id/family_steps_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/family_da_competicao_res"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/criador_steps"
                android:text="XXXXX" />

            <TextView
                android:id="@+id/family_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/family_steps"
                android:layout_marginTop="16dp"
                android:text="Point" />

            <TextView
                android:id="@+id/family_point_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/family_steps_res"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/criador_steps"
                android:text="XXXXX" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>